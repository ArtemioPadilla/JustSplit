{
  "name": "cybereco-monorepo",
  "version": "0.1.0",
  "private": true,
  "description": "CyberEco - A comprehensive platform for digital lifestyle management starting with expense splitting (JustSplit) and central authentication (Hub)",
  "scripts": {
    "dev": "nx run-many --target=dev --projects=justsplit-app,hub --parallel",
    "build": "nx run-many --target=build --projects=justsplit-app,hub",
    "test": "nx run-many --target=test --all",
    "lint": "nx run-many --target=lint --all",
    "clean": "nx reset",
    "emulators": "firebase emulators:start --import=./emulator-data --export-on-exit=./emulator-data",
    "emulators:hosting": "firebase emulators:start --only hosting,auth,firestore,ui",
    "hosting:justsplit": "nx run justsplit-app:hosting:emulator",
    "hosting:hub": "nx run hub:hosting:emulator",
    "hosting:dev:justsplit": "nx run justsplit-app:hosting:dev",
    "hosting:dev:hub": "nx run hub:hosting:dev"
  },
  "dependencies": {
    "jest": "^29.7.0"
  },
  "devDependencies": {
    "@nx/eslint-plugin": "19.8.14",
    "@nx/jest": "19.8.14",
    "@nx/js": "19.8.14",
    "@nx/linter": "19.8.14",
    "@nx/next": "19.8.14",
    "@nx/react": "19.8.14",
    "@nx/workspace": "19.8.14",
    "@swc-node/register": "^1.6.7",
    "@swc/core": ">= 1.4.13",
    "@swc/helpers": ">=0.5.17",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "nx": "19.8.14",
    "typescript": "^5"
  }
}
